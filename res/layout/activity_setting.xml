<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res/com.jiangcheng.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/title_bar"
        android:text="设置中心"
        />
    <com.jiangcheng.mobilesafe.widget.SettingItemView
         itheima:title="设置自动更新"
         itheima:desc_on="设置自动更新已经开启"
         itheima:desc_off="设置自动更新已经关闭"
         android:id="@+id/siv_update"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        />
  
    <com.jiangcheng.mobilesafe.widget.SettingItemView
         itheima:title="设置显示号码归属地"
         itheima:desc_on="设置显示号码归属地已经开启"
         itheima:desc_off="设置显示号码归属地已经关闭"
         android:id="@+id/siv_show_address"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        />
  
   
    <com.jiangcheng.mobilesafe.widget.SettingClickView
        android:id="@+id/scv_changebg"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        />
   <com.jiangcheng.mobilesafe.widget.SettingItemView
         itheima:title="黑名单拦截的设置"
         itheima:desc_on="黑名单拦截已经开启"
         itheima:desc_off="黑名单拦截已经关闭"
         android:id="@+id/siv_callsms_safe"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        />
       

</LinearLayout>
